# ============================================
# APPLICATION SETTINGS
# ============================================

# Application Name (displayed in UI)
APP_NAME="Laravel Admin Boilerplate"

# Environment: local, staging, production
APP_ENV=local

# Application Key (run: php artisan key:generate)
APP_KEY=

# Debug mode: true for development, false for production
APP_DEBUG=true

# Application URL (change for production)
APP_URL=http://localhost:8000

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance mode
APP_MAINTENANCE_DRIVER=file

# Server workers
PHP_CLI_SERVER_WORKERS=4

# ============================================
# DATABASE CONFIGURATION
# ============================================

# Database driver: mysql, pgsql, sqlite, sqlsrv
DB_CONNECTION=sqlite

# MySQL/PostgreSQL settings (uncomment if not using SQLite)
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

# ============================================
# LOGGING & DEBUGGING
# ============================================

# Log channel: stack, single, daily, slack, syslog, errorlog
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================
# SESSION & CACHE
# ============================================

# Session driver: file, cookie, database, memcached, redis, array
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Cache driver: file, database, memcached, redis, array
CACHE_STORE=database
# CACHE_PREFIX=

# ============================================
# QUEUE CONFIGURATION
# ============================================

# Queue connection: sync, database, redis, sqs, beanstalkd
# Use 'database' for auto-backup features
QUEUE_CONNECTION=database

# ============================================
# BROADCASTING & FILESYSTEM
# ============================================

# Broadcast driver: pusher, ably, redis, log, null
BROADCAST_CONNECTION=log

# Filesystem disk: local, public, s3
FILESYSTEM_DISK=local

# ============================================
# MAIL CONFIGURATION
# ============================================

# Mail driver: smtp, sendmail, mailgun, ses, postmark, log, array
MAIL_MAILER=log

# SMTP Settings (if using smtp)
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null

# From address
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# THIRD-PARTY SERVICES
# ============================================

# AWS S3 (Optional - for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Redis (Optional - for caching/queue)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Memcached (Optional)
MEMCACHED_HOST=127.0.0.1

# ============================================
# GOOGLE DRIVE BACKUP (Optional)
# ============================================

# Get these from Google Cloud Console
# https://console.cloud.google.com/
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=
GOOGLE_DRIVE_REDIRECT_URI="${APP_URL}/auth/google-drive/callback"

# ============================================
# SECURITY
# ============================================

# Bcrypt rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# ============================================
# VITE (Frontend Build Tool)
# ============================================

VITE_APP_NAME="${APP_NAME}"

# ============================================
# NOTES FOR PRODUCTION DEPLOYMENT
# ============================================

# 1. Change APP_ENV to 'production'
# 2. Set APP_DEBUG to 'false'
# 3. Update APP_URL to your domain
# 4. Use strong APP_KEY (php artisan key:generate)
# 5. Configure proper database (MySQL recommended)
# 6. Set up proper mail service (SMTP, Mailgun, etc.)
# 7. Use Redis for cache and queue in production
# 8. Enable HTTPS and update session/cookie settings
# 9. Configure proper backup strategy
# 10. Set up monitoring and logging services
